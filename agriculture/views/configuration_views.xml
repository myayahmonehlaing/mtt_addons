<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>


        <!-- Tree View -->
        <record id="view_agriculture_farmer_list" model="ir.ui.view">
            <field name="name">agriculture.farmer.list</field>
            <field name="model">agriculture.farmer</field>
            <field name="arch" type="xml">
                <list string="Farmers">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_agriculture_farmer_form" model="ir.ui.view">
            <field name="name">agriculture.farmer.form</field>
            <field name="model">agriculture.farmer</field>
            <field name="arch" type="xml">
                <form string="Farmer">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="user_id"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="image_field" widget="image" class="oe_avatar"
                                   style="float:right; width:128px; height:128px;" nolabel="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_agriculture_farmer_kanban" model="ir.ui.view">
            <field name="name">agriculture.farmer.kanban</field>
            <field name="model">agriculture.farmer</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('agriculture.farmer', 'image_field', record.id.value)"
                                         class="oe_avatar" t-att-alt="record.name.value"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <field name="phone"/>
                                    </div>
                                    <div>
                                        <field name="email"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="action_agriculture_farmer" model="ir.actions.act_window">
            <field name="name">Farmers</field>
            <field name="res_model">agriculture.farmer</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new farmer
                </p>
            </field>
        </record>


        <!-- Tree View -->
        <record id="view_agriculture_field_list" model="ir.ui.view">
            <field name="name">agriculture.field.list</field>
            <field name="model">agriculture.field</field>
            <field name="arch" type="xml">
                <list string="Fields">
                    <field name="name"/>
                    <field name="location"/>
                    <field name="total_area"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_agriculture_field_form" model="ir.ui.view">
            <field name="name">agriculture.field.form</field>
            <field name="model">agriculture.field</field>
            <field name="arch" type="xml">
                <form string="Field">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="location"/>
                                <field name="total_area"/>
                                <field name="farmer_id"/>
                                <field name="user_id"/>
                                <field name="code"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="image_field" widget="image" class="oe_avatar"
                                       style="float:right; width:128px; height:128px;" nolabel="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_agriculture_field_kanban" model="ir.ui.view">
            <field name="name">agriculture.field.kanban</field>
            <field name="model">agriculture.field</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('agriculture.field', 'image_field', record.id.value)"
                                         class="oe_avatar" t-att-alt="record.name.value"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <field name="location"/>
                                    </div>
                                    <div>Total Area:
                                        <field name="total_area"/>
                                        acres
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_agriculture_field" model="ir.actions.act_window">
            <field name="name">Fields</field>
            <field name="res_model">agriculture.field</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new CV form!
                </p>
            </field>
        </record>


        <record id="view_agriculture_stage_list" model="ir.ui.view">
            <field name="name">agriculture.stage.list</field>
            <field name="model">agriculture.stage</field>
            <field name="arch" type="xml">
                <list string="Stages">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>


        <record id="view_agriculture_stage_form" model="ir.ui.view">
            <field name="name">agriculture.stage.form</field>
            <field name="model">agriculture.stage</field>
            <field name="arch" type="xml">
                <form string="Agriculture Stage">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="product_id"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="image_field" widget="image" class="oe_avatar"
                                       style="float:right; width:128px; height:128px;" nolabel="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_agriculture_stage_kanban" model="ir.ui.view">
            <field name="name">agriculture.stage.kanban</field>
            <field name="model">agriculture.stage</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('agriculture.stage', 'image_field', record.id.value)"
                                         class="oe_avatar" t-att-alt="record.name.value"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <field name="product_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="action_agriculture_stage" model="ir.actions.act_window">
            <field name="name">Stage</field>
            <field name="res_model">agriculture.stage</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new CV form!
                </p>
            </field>
        </record>
    </data>


</odoo>